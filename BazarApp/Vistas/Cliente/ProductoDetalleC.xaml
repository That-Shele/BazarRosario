<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BazarApp.Vistas.Cliente.ProductoDetalleC"
             Title="ProductoDetalleC">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Image x:Name="imgDisplay" HorizontalOptions="Center" HeightRequest="500" WidthRequest="500"/>
            <Label x:Name="nombre" HorizontalOptions="Center" FontSize="26" FontFamily="Hatfielin"/>
            <Label x:Name="categoria" HorizontalOptions="Center" FontSize="26" FontFamily="Hatfielin"/>
            <Label x:Name="tipo" HorizontalOptions="Center" FontSize="26" FontFamily="Hatfielin"/>
            <Label x:Name="precio" HorizontalOptions="Center" FontSize="26" FontFamily="Hatfielin"/>
            <Entry x:Name="eCantidad" Placeholder="Ingrese cantidad a comprar" HorizontalOptions="Center" FontFamily="Hatfielin"/>


            <Button x:Name="btnAgregar" Text="Agregar a la lista" Margin="0,20" Clicked="btnSave_Clicked" FontFamily="Hatfielin"/>
            <Button x:Name="btnCancelar" Text="Cancelar" Clicked="btnCancel_Clicked" FontFamily="Hatfielin"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>