<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BazarApp.Vistas.Login"
             Title="Login"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry Placeholder="Email" x:Name="eMail" HorizontalOptions="Center" WidthRequest="560" />
            <Entry Placeholder="Contraseña" x:Name="ePass" HorizontalOptions="Center" WidthRequest="560" />
            <Button Text="Iniciar Sesión" HorizontalOptions="Center" WidthRequest="400" x:Name="Log" Clicked="Log_Clicked"/>
            <Button Text="Crear Cuenta" HorizontalOptions="Center" WidthRequest="400" x:Name="SignUp" Clicked="SignUp_Clicked"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>